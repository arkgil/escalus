{erl_opts, [debug_info,
            warn_missing_spec,
            {i, [".", "include"]}
           ]}.

{require_otp_vsn, "(^1[89])|^20"}.

{deps, [
        {exml, ".*", {git, "git://github.com/esl/exml.git", "d365533"}},
        {base16, ".*", {git, "git://github.com/goj/base16.git", "ec420aa"}},
        {fusco, ".*", {git, "git://github.com/esl/fusco.git", "0a428471"}},
        {meck, ".*", {git, "git://github.com/eproxus/meck.git", {tag, "0.8.2"}}},
        {mustache, ".*", {git, "git://github.com/mojombo/mustache.erl.git", "d0246fe"}},
        {uuid, "", {git, "git://github.com/okeuday/uuid.git", "v1.7.1"}},
        {cowlib, ".*", {git, "https://github.com/ninenines/cowlib.git", "e4da207"}},
        {gun, ".*", {git, "https://github.com/ninenines/gun.git", "02fa5f3"}}
